syntax on

let mapleader = "space"

" basically just https://github.com/te9c/nvim-config/blob/main/lua/options.lua
" with some tweaks
set number
set cindent
set shiftwidth=4
set expandtab
set ignorecase
set smartcase
set scrolloff=2

" keymaps section
inoremap jj <esc>
nnoremap o o<esc>
nnoremap O O<esc>
